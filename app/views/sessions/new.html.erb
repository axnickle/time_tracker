<!-- non-model backed form -->
<div class='well'>
<%= form_tag '/login' do %>
  <div class='control-group'>
  <%= label_tag :email %>
  <%= text_field_tag :email %>
  </div>
  <div class='control-group'%>
  <%= label_tag :password %>
  <%= password_field_tag :password %>
  </div>
  <%= submit_tag 'Login', class: 'btn btn-success' %>
<% end %>
</div>
